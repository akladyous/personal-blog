<%= turbo_frame_tag dom_id post do %>
	<div>
		<div class="row">
			<div class="col-8">
				<div class="d-inline-block">
					<span><%= post.user.full_name %></span>
				</div>
				<div class="d-inline-block">
					<span><%= "5 min read" %></span>
				</div>
				<div class="d-inline-block">
					<span><%= "Listen" %></span>
				</div>
			</div>
			<div class="col-4">
				<div class="d-flex justify-content-end">
					<div class="">
						<%= render 'post_links', post: post %>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<h1><%= post.title %></h1>
			<%= post.content %>
		</div>
	</div>
<% end %>
