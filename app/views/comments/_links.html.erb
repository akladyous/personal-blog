<div class="btn-group position-absolute end-0">
	<button type="button" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="all:initial">
		<i class="bi bi-three-dots fs-4 fw-bold"></i>
	</button>
	<ul class="dropdown-menu dropdown-menu-end">
		<li>
			<%= button_to 'Edit', post_comment_path(post, comment),
                method: :delete,
                form: { data: { turbo_frame: '_top'}, class: "button_to dropdown-item" } if
                user_signed_in? &&  comment.user_id == current_user&.id  %>
		</li>
		<li>
			<%= button_to 'Delete', post_comment_path(post, comment),
                method: :delete,
                form: { data: { turbo_frame: '_top'}, class: "button_to dropdown-item" } if
                user_signed_in? &&  comment.user_id == current_user&.id  %>
		</li>
	</ul>
</div>
