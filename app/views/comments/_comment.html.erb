<%= turbo_frame_tag post_comment_path(commentable, comment).parameterize do %>
	<div class="container-fluid my-3 comment">
		<div class="row">
			<div class="col-1 align-self-center">
				<div class="">
					<%= image_tag  comment.user.avatar.representation(resize_to_fill: [40, 40]) , { class: "m-1 rounded-circle", alt: "user-avatar", } %>
				</div>
			</div>
			<div class="col align-self-center">
				<div class="d-flex flex-column">
					<p class="my-0"><%= comment.user.full_name %></p>
				</div>
				<div>
					<p class="m-0 fw-lighter fs-6 user_since">over <%= time_ago_in_words comment.created_at %></p>
				</div>
			</div>
			<div class="col position-relative">
				<%= render partial: 'comments/links', locals: { post: commentable, comment: comment} if user_signed_in? %>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<p><%= comment.content %></p>
			</div>
		</div>
	</div>
<% end %>
